{% extends "::base.html.twig" %}

{% block title %}DistributiumFrontendBundle:Quiz:home{% endblock %}






{% block body %}

<div class="row quiz_home">
    <div class="col-md-10 col-md-offset-1">
        <div class="row text-center services-integration">
            {{ sonata_page_render_container('integration_top') }}
        </div>
        <div class="row section-form1 text-center lodging-type">
            <div class="row">
                <p class="glyphicon glyphicon-link section-title">¿Que tipo de alojamiento gestionas?</p>
            </div>
            <div class="row">
                <div class="col-md-2 col-md-offset-2">
                    <select class="form-control">
                        {% for lodgingType in lodgingTypes%}
                            <option id="lt_{{lodgingType.id}}" name="{{lodgingType.id}}" >{{lodgingType.name}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-control">
                        {% for lodgingSizeValue,lodgingSizeName in lodgingSizes%}
                            <option id="ls_{{lodgingSizeName}}" name="{{lodgingSizeValue}}" >{{lodgingSizeName}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-control">
                        {% for lodgingCategoryValue,lodgingCategoryName in lodgingCategories%}
                            <option id="lt_{{lodgingCategoryName}}" name="{{lodgingCategoryValue}}" >{{lodgingCategoryName}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-control">
                        {% for lodgingRegionValue,lodgingRegionName in lodgingRegions%}
                            <option id="lt_{{lodgingRegionName}}" name="{{lodgingRegionValue}}" >{{lodgingRegionName}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="row section-form2 text-center interested-tools">
            <div class="row">
                <p class="glyphicon glyphicon-link section-title">¿Qué herramientas te interesan?</p>
            </div>
            <div class="row categories">
                <div id="3" rel="{{path('distributium_frontend_category_showproducts', { 'category': 3 })}}" class="col-md-2 col-md-offset-2">Property Management Sys</div>
                <div id="1" rel="{{path('distributium_frontend_category_showproducts', { 'category': 1 })}}" class="col-md-2">Channel Manager</div>
                <div id="2" rel="{{path('distributium_frontend_category_showproducts', { 'category': 2 })}}" class="col-md-2">Internet Booking Engine</div>
                <div id="4" rel="{{path('distributium_frontend_category_showproducts', { 'category': 4 })}}" class="col-md-2">Revenue Management Sys</div>
            </div>
            <div class="row">
            <div id="product-options" class="row text-left"></div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        var quizHome = {};
    </script>
    {{ parent() }}
    <script src="{{ asset('assetic/distributium_quiz_js.js') }}" type="text/javascript"></script>
{% endblock %}

