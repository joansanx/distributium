{% extends "::base.html.twig" %}

{% block title %}DistributiumFrontendBundle:Product:show{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-10 col-md-offset-1">


        <div class="row category_top">
            <div class="col-md-10">

                    <div class="row">
                        <div class="col-md-2">
                            <div >
                                <img class="img-rounded mainLogo" src="/{{item.logo.webpath}}" alt="" width="120" height="121">
                            </div>
                            {#<div class="bt_ir-a-web">Ir a la web</div>#}
                        </div>
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="category_name">{{item.category.name}}</p>
                                    <p class="product_name">{{item.name}}</p>
                                    <p class="product_company">by {{item.company.name}}</p>
                                    <div class="bt_integraciones pull-left">Ver integraciones</div>
                                    <div class="bt_integraciones pull-left">Solicitar info</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="glyphicon glyphicon-wrench product-name"> Sobre {{item.name}}<p>
                            <p class="text-20 productShortDescription">{{item.description}}</p>
                        </div>
                        {% for itemHasImage in item.itemHasImage %}
                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                <a class="thumbnail" href="#">
                                    <img class="img-responsive" src="{% path itemHasImage.media, 'reference' %}" alt="">
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="glyphicon glyphicon-check"> Features<p>
                            <ul>
                            {% for lodgingFeature in item.lodgingFeature %}
                                <li>{{lodgingFeature.name}}</li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="glyphicon glyphicon-home product-name"> Sobre {{item.company.name}}<p>
                            <p class="text-20 productShortDescription">{{item.company.description}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="glyphicon glyphicon-wrench product-name"> Other productos of {{item.company.name}}<p>
                        </div>
                        {% for companyItem in item.company.items %}
                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                <a class="thumbnail" href="#">
                                    <img class="img-responsive" src="/{{companyItem.logo}}" alt="">
                                </a>
                            </div>
                        {% endfor %}
                    </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
{#    <script src="{{ asset('assetic/distributium_frontend_js.js') }}" type="text/javascript"></script>#}
{% endblock %}

