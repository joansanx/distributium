{% extends "::base.html.twig" %}

{% block title %}DistributiumFrontendBundle:Category:show{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-10 col-md-offset-1">


        <div class="row category_top">
            <div class="col-md-12">
                <h3><span class="glyphicon glyphicon-list"></span>&nbsp;{{category.name}}</h3>
                <p>{{category.description}}</p>
        
            </div>
        </div>
        <div class="row category_show">

            <div class="col-md-3 menu_filter">
        
                {{ include('DistributiumFrontendBundle:Category:filterMenu.html.twig', { 'category': category, 'lodgingSizes': lodgingSizes }) }}
        
            </div>
            <div class="col-md-9">
                <div id="productList"></div>
            </div>
        </div>
    </div>
</div>

                {{ include('DistributiumFrontendBundle:Category:productTemplate.html.twig') }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assetic/distributium_frontend_js.js') }}" type="text/javascript"></script>
{% endblock %}

